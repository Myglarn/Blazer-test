@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="@GetIncreaseButtonClass()" @onclick="IncrementCount">Plus</button>
<button class="@GetDecreaseButtonClass()" @onclick="DecreaseCount">Minus</button>
<button class="@GetResetButtonClass()" @onclick="Reset">Reset</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
    private void DecreaseCount()
    {
        currentCount--;
    }
    private void Reset()
    {
        currentCount = 0;
    }


    private string GetIncreaseButtonClass() => currentCount > 0 ? "btn btn-success" : "btn btn_primary";

    private string GetDecreaseButtonClass() => currentCount < 0 ? "btn btn-danger" : "btn btn_primary";
   
    private string GetResetButtonClass() => currentCount == 0 ? "btn btn-info" : "btn btn_primary";
}
